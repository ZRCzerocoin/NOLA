    input[type="text"] {
      flex: 1;
      padding: 0.75rem 1rem;
      border-radius: 10px;
      border: none;
      outline: none;
      font-size: 1rem;
    }

    button {
      padding: 0.75rem 1rem;
      border-radius: 10px;
      border: none;
